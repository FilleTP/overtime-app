<h1>Posts</h1>


<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<table class="table">
				<thead>
					<tr>
						<th>
							ID
						</th>
						<th>
							Date
						</th>
						<th>
							User
						</th>
						<th>
							Rationale
						</th>
					</tr>
				</thead>
				<tbody>
        <% @posts.each do |post| %>
					<tr>
						<td>
							<%= post.id %>
						</td>
						<td>
							<%= post.created_at %>
						</td>
						<td>
							<%= post.user.first_name %>
						</td>
						<td>
							<%= post.rationale.truncate(12) %>
              <% end %>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>
